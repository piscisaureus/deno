{
  "compilerOptions": {
    "allowJs": true,
    "lib":["es2018", "DOM"],
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "es2018",
    "noImplicitReturns": true,
    "pretty": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": false,
    "experimentalDecorators": true
  }
}
